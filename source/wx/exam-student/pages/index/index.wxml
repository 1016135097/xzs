<!--index.wxml-->
<view>
  <view>
    <swiper indicator-dots="false" autoplay="true" interval="5000" duration="1000">
      <swiper-item>
        <image src="/assets/carousel/1.png" class="slide-image" />
      </swiper-item>
      <swiper-item>
        <image src="/assets/carousel/2.png" class="slide-image" />
      </swiper-item>
      <swiper-item>
        <image src="/assets/carousel/3.png" class="slide-image" />
      </swiper-item>
      <swiper-item>
        <image src="/assets/carousel/4.png" class="slide-image" />
      </swiper-item>
    </swiper>
  </view>
  <i-panel title="固定试卷">
    <i-cell-group wx:for="{{fixedPaper}}" data-item="item" wx:key="{{item.id}}">
      <i-cell title="{{item.name}}" is-link url="/pages/record/index" link-type="reLaunch"></i-cell>
    </i-cell-group>
  </i-panel>
  <i-panel title="时段试卷">
    <i-cell-group wx:for="{{timeLimitPaper}}" data-item="item" wx:key="{{item.id}}">
      <i-cell title="{{item.name}}" is-link url="/pages/record/index" label="{{item.startTime}} 至 {{item.endTime}}"></i-cell>
    </i-cell-group>
  </i-panel>

</view>