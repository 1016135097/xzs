
<!--pages/user/info/index.wxml-->

<view>
    <i-cell-group>
        <i-cell wx:for="{{messageList}}" data-item="item" label="{{item.content}}" wx:key="{{item.id}}" url="/pages/user/message/info/index?id={{item.id}}" title="{{item.title}}" lable="{{item.content}}" is-link value="{{item.readed ? '已读':'未读'}}"></i-cell>
    </i-cell-group>
    <i-page current="{{queryParam.pageIndex}}" total="{{total}}" bind:change="pageChange" i-class="student-page">
      <view slot="prev">上一页</view>
      <view slot="next">下一页</view>
    </i-page>
</view>

<i-spin size="large" fix wx:if="{{ spinShow }}"></i-spin>
<i-message id="message"/>